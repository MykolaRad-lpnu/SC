<Application x:Class="ProductsEnterpriseOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProductsEnterpriseOrganizer">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="my:CustomButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#b2e7e9"/>
                <Setter Property="Foreground" Value="#45c1c7"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
         BorderBrush="{TemplateBinding BorderBrush}"
         BorderThickness="{TemplateBinding BorderThickness}"
         CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
